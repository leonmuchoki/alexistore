<div class="table-responsive">
  <table class="table table-hover" id="table-order-food">
    <thead>
          <tr>
            <th>Name</th>
            <th>Part No</th>
            <th>Selling Price</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.partno %>-food-id" %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity %></td>
            </tr>
          <% end %>
        </tbody>
  </table>
</div>